# Environment Variables for GUI
# Copy to .env: cp .env.example .env

# Docker Redis (only if using docker-compose)
REDIS_VERSION=7
REDIS_APPENDONLY=yes
REDIS_MAXMEMORY=256mb
REDIS_MAXMEMORY_POLICY=allkeys-lru
REDIS_HEALTHCHECK_INTERVAL=10s
REDIS_HEALTHCHECK_TIMEOUT=5s
REDIS_HEALTHCHECK_RETRIES=5

# Docker Redis Connection (only if using docker-compose)
APP_REDIS_HOST=redis
APP_REDIS_PORT=6379
APP_REDIS_PASSWORD=
APP_REDIS_DB=0

# Docker Resource Limits (only if using docker-compose)
DOCKER_APP_MEMORY_LIMIT=4g
DOCKER_APP_CPU_LIMIT=2.0
DOCKER_APP_MEMORY_RESERVATION=1g
DOCKER_REDIS_MEMORY_LIMIT=512m
