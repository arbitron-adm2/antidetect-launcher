#!/bin/bash
set -e

case "$1" in
    remove|upgrade|deconfigure)
        # Stop any running instances
        pkill -f antidetect-browser 2>/dev/null || true
        pkill -f antidetect-playwright 2>/dev/null || true

        # Give processes time to shutdown gracefully
        sleep 1
        ;;

    failed-upgrade)
        ;;

    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

#DEBHELPER#

exit 0
