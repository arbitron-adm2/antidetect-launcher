#!/bin/bash
set -e

# Package configuration
INSTALL_DIR="/opt/antidetect-browser"
VENV_DIR="$INSTALL_DIR/venv"
DATA_DIR="/var/lib/antidetect-browser"
LOG_DIR="/var/log/antidetect-browser"
CACHE_DIR="/var/cache/antidetect-browser"

case "$1" in
    configure)
        # Create data directories
        mkdir -p "$DATA_DIR"
        mkdir -p "$LOG_DIR"
        mkdir -p "$CACHE_DIR"

        # Set proper permissions
        chmod 755 "$INSTALL_DIR"
        chmod 755 "$DATA_DIR"
        chmod 755 "$LOG_DIR"
        chmod 755 "$CACHE_DIR"

        # Create symlink for easier access
        ln -sf "$INSTALL_DIR/venv/bin/antidetect-browser" /usr/local/bin/antidetect-browser 2>/dev/null || true
        ln -sf "$INSTALL_DIR/venv/bin/antidetect-playwright" /usr/local/bin/antidetect-playwright 2>/dev/null || true

        # Update icon cache
        if command -v gtk-update-icon-cache >/dev/null 2>&1; then
            gtk-update-icon-cache -q -t -f /usr/share/icons/hicolor 2>/dev/null || true
        fi

        # Update desktop database
        if command -v update-desktop-database >/dev/null 2>&1; then
            update-desktop-database -q /usr/share/applications 2>/dev/null || true
        fi

        # Update MIME database
        if command -v update-mime-database >/dev/null 2>&1; then
            update-mime-database /usr/share/mime 2>/dev/null || true
        fi

        # Install Playwright system dependencies if not present
        if [ -x "$VENV_DIR/bin/playwright" ]; then
            echo "Installing Playwright system dependencies..."
            "$VENV_DIR/bin/playwright" install-deps chromium 2>/dev/null || {
                echo "Warning: Could not install Playwright dependencies automatically."
                echo "You may need to run: sudo apt-get install libnss3 libxss1 libasound2"
            }
        fi

        # Check for Redis
        if ! command -v redis-server >/dev/null 2>&1; then
            echo "Notice: Redis server is recommended but not installed."
            echo "Install with: sudo apt-get install redis-server"
        fi

        echo "Antidetect Browser has been successfully installed!"
        echo "Run 'antidetect-browser' to launch the GUI application."
        echo "Run 'antidetect-playwright --help' for CLI usage."
        ;;

    abort-upgrade|abort-remove|abort-deconfigure)
        ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

#DEBHELPER#

exit 0
